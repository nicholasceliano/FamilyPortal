extends /_layout

block content
	div(ng-controller="loginCtrl" ng-init="init()")
		div(class="login-ctrl col-sm-8 col-lg-2")
			form(class="form-horizontal" action="/login" method="post")
				div(class="form-group")
					label(class="col-xs-12") Username:
					div(class="col-xs-12")
						input(type="text" name="username" class="form-control" placeholder="Username" autofocus="autofocus" value=username)
				div(class="form-group")
					label(class="col-xs-12") Password:
					div(class="col-xs-12")
						input(type="password" name="pwd" class="form-control" placeholder="Password"  value=password)
				div(class="form-group")
					div(class="col-xs-12")
						div(class="checkbox")
							label.
								<input type="checkbox"> Remember me
				div(class="form-group")
					div(class="col-xs-12")
						button(type="submit" class="btn btn-default") Submit
			strong(class="text-danger") !{error}